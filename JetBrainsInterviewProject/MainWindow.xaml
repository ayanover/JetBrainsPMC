<Window x:Class="JetBrainsInterviewProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JetBrainsInterviewProject"
        mc:Ignorable="d"
        Title="Command Executor" Height="450" Width="800"
        Background="#1E1E1E">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Command Input Area -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="CommandInputTextBox" 
                     Grid.Column="0" 
                     Text="{Binding CommandText, UpdateSourceTrigger=PropertyChanged}"
                     Padding="5"
                     FontFamily="Consolas"
                     FontSize="14"
                     Background="#2D2D30"
                     Foreground="White"
                     KeyDown="CommandInputTextBox_KeyDown"/>
            
            <Button x:Name="ExecuteButton" 
                    Grid.Column="1" 
                    Content="Execute" 
                    Command="{Binding ExecuteCommand}"
                    Margin="5,0,0,0"
                    Padding="10,5"
                    Background="#0E639C"
                    Foreground="White"
                    BorderThickness="0"/>
        </Grid>
        
        <!-- Command Output Area -->
        <RichTextBox x:Name="CommandOutput" 
                     Grid.Row="1" 
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Background="#2D2D30"
                     FontFamily="Consolas"
                     FontSize="14"
                     BorderThickness="1"
                     BorderBrush="#3F3F46">
            <RichTextBox.Document>
                <FlowDocument/>
            </RichTextBox.Document>
        </RichTextBox>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0" Background="#007ACC">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" 
                           Text="{Binding StatusText}" 
                           Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>